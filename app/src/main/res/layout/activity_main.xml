<?xml version="1.0" encoding="utf-8"?>
<com.jsheng.slidingmenu.SlidingMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:slidingCrack="@dimen/activity_horizontal_margin"
    app:slidingPadding="60dp"
    tools:context="com.jsheng.slidingmenu.sample.MainActivity">

    <LinearLayout
        android:id="@+id/container_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/menu_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark">

        </FrameLayout>

        <FrameLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_green_dark">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"/>

            <android.support.v4.view.ViewPager
                android:id="@+id/content_view_pager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center">

            </android.support.v4.view.ViewPager>

        </FrameLayout>

    </LinearLayout>

</com.jsheng.slidingmenu.SlidingMenu>
